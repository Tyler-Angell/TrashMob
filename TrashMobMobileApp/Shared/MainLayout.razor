@using TrashMobMobileApp.Features.LogOn
@inherits LayoutComponentBase

<div class="page">
	<div class="sidebar">
		<NavMenu />
	</div>

	<main>
		<div class="top-row px-4">
			<a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
		</div>
		<div class="top-row px-4">
            @if (!UserState.UserContext.IsLoggedOn)
            {
                <button class="btn btn-primary" @onclick="@( async () => await OnLoginClicked())">Sign In</button>
            }
        </div>
		<article class="content px-4">
			@Body
		</article>
	</main>
</div>
